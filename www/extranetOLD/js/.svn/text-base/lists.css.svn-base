ul.sortable li {
	position: relative;
}

ul.boxy {
	list-style-type: none;
	padding: 0px;
	margin: 0px;
	width: 100%;
	min-width: 780px;
	font-size: 13px;
	font-family: Arial, sans-serif;
	cursor:pointer;
}
ul.boxy li {
	padding: 2px 2px;
	border: 1px solid #ccc;
	background-color: #eee;
}
.clickable a {
	display: block;
	text-decoration: none;
	cursor: pointer;
	cursor: hand;
}
.clickable li:hover {
	background-color: #f6f6f6;
}
