<table width="100%" border="0" class="bordertable" cellpadding="1" cellspacing="0">     
<tr>
   <td>      
      <table width="100%" border="0" cellspacing="0" class="noprint">     
        <tr align="left" valign="bottom">      
	              <form action="{FORM_ACTION}">
                  {HIDDEN_PARTS}
                  <td align="left">
                  <span class="szoveg">
                  <select name="startyear">
				   {STARTYEAR_OPTIONS}
                  </select>
                  <select name="startmonth">
				   {STARTMONTH_OPTIONS}
                  </select>
                  <select name="startday">
				   {STARTDAY_OPTIONS}
                  </select>
		          &nbsp;-&nbsp;
                  <select name="endyear">
				   {ENDYEAR_OPTIONS}
                  </select>
                  <select name="endmonth">
				   {ENDMONTH_OPTIONS}
                  </select>
                  <select name="endday">
				   {ENDDAY_OPTIONS}
                  </select>
				  &nbsp;
				  <input type="hidden" name="dostat" value="1">
				  <input type="submit" name="go" value="{dg_go}">
                  </span>
                  </td>
		          </form>
        </tr>    
      </table>     
    </td>     
  </tr>     
</table>     
<table><tr><td><img src="images/spacer.gif" width="10" height="2"></td></tr></table>
<table width="100%" border="0" class="bordertable" cellpadding="1" cellspacing="0">     
<tr>
   <td>      
      <table width="100%" border="0" cellspacing="0" class="noprint">     
        <tr align="left" valign="bottom">      
	              <form action="{FORM_ACTION}">
                  {HIDDEN_PARTS}
                  <td align="left" width="575">
                  <span class="szoveg">
                  <select name="period" onchange="this.form.submit();">
				     <option value='allcamp'>{dg_period}</option>  
				     <option value='allcamp' {PER_overall}>{dg_all}</option>  
				     <option value='lastmonth' {PER_lastmonth}>{dg_lastmonth}</option>  
				     <option value='lastweek' {PER_lastweek}>{dg_lastweek}</option>  
				     <option value='yesterday' {PER_yesterday}>{dg_yesterday}</option>  
				     <option value='today' {PER_today}>{dg_today}</option>  
                  </select>
                  </span>
                  </td>
		          </form>
	              <form action="{FORM_ACTION}">
                  {HIDDEN_PARTS}
                  <td width="18" align="center">
                  <span class="szoveg">
				    <input type="submit" name="period_left" value="<">
                  </span>
                  </td>
		          </form>
	              <form action="{FORM_ACTION}">
                  {HIDDEN_PARTS}
                  <td width="18" align="center">
                  <span class="szoveg">
				    <input type="submit" name="period_right" value=">">
                  </span>
                  </td>
		          </form>                  
        </tr>    
      </table>     
    </td>     
  </tr>     
</table>     
<table><tr><td><img src="images/spacer.gif" width="10" height="2"></td></tr></table>

