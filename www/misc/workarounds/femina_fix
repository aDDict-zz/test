#!/usr/bin/perl

# maxima1.1_1_4/kutjazzyradio-#cid#3e4r6h1y@maxima.hu.new_hidden.ok

$notok_files="femina";
$notok_dir="/var/spool/subscribe";

open (NOTOK, "< $notok_files") or die "Could not open notok file list\n";
while (<NOTOK>) {
    $file=$_;
    $file=~s/[\r\n]+$//;
    if ($file =~ /(kutfeminacontent[abc])-(#cid#[^\@]+)\@/) {
        $group = $1;
        $email = $2;
        $subscribe="|/var/www/maxima_engine/www/hidden-subscribe $email $group < $notok_dir/$file";
		$subscribe=~s/#/\\#/g;
        print "$subscribe\n";
		open (OUT,$subscribe);
		close OUT;
    }
}
close NOTOK;

