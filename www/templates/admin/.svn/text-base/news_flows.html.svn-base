<script language="javascript">
function delFeed(feedID, feedName){
	if(confirm('Biztos, hogy torli a(z) `' + feedName + '` hrifolyamot?')){
		document.forms['del_news_flow_'+feedID].submit();
	}
	return false;
}
</script>
