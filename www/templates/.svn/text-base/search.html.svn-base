{include file="header.html"}
<body>
{include file="header_search.html"}
{include file="menu.html"}
<div >
	<div id="search_results">			
		<h1 style="margin:10px 0 0 21px; ">Keresett kifejez&eacute;s: "{$q}". Tal&aacute;latok: {$total_pages}</h1>
		<ul>
			
			{section name=i loop=$news}
			<li>
				<h2><a href="{$news[i].news_url}" target="_blank">{$news[i].news_title}</a></h2>
				{$news[i].dadd} - <span>{$news[i].agency_name}</span>
				<p>{$news[i].news_lead}</p>
				<p></p>
			</li>
			{sectionelse}
			<li style="border:0px; ">
				<span style="color:#FF0000">
				{if $q == ""}
					K&eacute;rem &iacute;rjon be legal&aacute;bb egy kifejez&eacute;st ami ut&aacute;n keresni szeretne.
				{else}
					A keres&eacute;si krit&eacute;riumnak nem felelt meg egy h&iacute;r sem!<br />
					K&eacute;rem b&#337;v&iacute;tse a keres&eacute;st!
				{/if}
				</span>
			</li>	
			{/section}
		</ul>
	</div>


<table border="0" cellspacing="4" cellpadding="2" align="center" class="paging">
  <tr>		
	<td>{if $__GT.current != 1 && $__GT.total_pages != 0}<a href="search.php?{$url}&page=1&plimit={$__GT.limit}" target="_self">Els&#337;</a>{/if}</td>
	<td>{if $__GT.current != 1 && $__GT.total_pages != 0}<a href="search.php?{$url}&page={$__GT.prev.link}&plimit={$__GT.limit}" target="_self">El&#337;z&#337;</a>{/if}</td>
	<td>
		<table border="0" cellspacing="3" cellpadding="0" align="center" class="paging">
			<tr>
				{section name=i loop=$__GT.pages}	  		
					<td align="center">								
						{if $__GT.pages[i].link == $__GT.current}
						<b>{$__GT.pages[i].link}</b>
						{else}
						<a href="search.php?{$url}&page={$__GT.pages[i].link}&plimit={$__GT.limit}" target="_self">{$__GT.pages[i].link}</a>
						{/if}						
					</td>			
				{/section}			
			</tr>
		</table>
	</td>				
	<td>{if $__GT.current != $__GT.total_pages && $__GT.total_pages != 0}<a href="search.php?{$url}&page={$__GT.next.link}&plimit={$__GT.limit}" target="_self">K&ouml;vetkez&#337;</a>{/if}</td>
	<td>{if $__GT.current != $__GT.total_pages && $__GT.total_pages != 0}<a href="search.php?{$url}&page={$__GT.total_pages}&plimit={$__GT.limit}" target="_self">Utols&oacute;</a>{/if}</td>
  </tr>
  
</table>
</div>
</body>
</html>
